
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Depot/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5">
    <h2>SUPPLIER ORDERS</h2>
</div>

<div class="row mt-5">
    <div class="col-lg-12">

        <div class="text-center" style="margin-top:30px; margin-bottom:30px;">
            <label>Search: </label>
            <input placeholder="Order No" />
        </div>

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Order No</th>
                    <th>Order Date</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var supplierOrder in Model)
                {
                    <tr>
                        <td>@supplierOrder.ID</td>
                        <td>@supplierOrder.OrderNo</td>
                        <td>@supplierOrder.OrderDate</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

