@model List<OrderDetail>
@{
    ViewBag.Title = "OrderComplete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal? totalPrice = 0;
}


<section id="order-summary" style="margin-top:50px;">
    <div class="row">
        <div class="col-md-9">
            <h1>We have received your order. Order no: <strong>@ViewBag.OrderNumber</strong></h1>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Sub Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        totalPrice += item.SubTotal;
                        <tr>

                            <td>
                                @item.ProductName
                            </td>
                            <td>
                                @item.Quantity
                            </td>
                            <td>
                                @item.UnitPrice
                            </td>
                            <td>
                                @item.SubTotal
                            </td>

                        </tr>
                    }
                    <tr>

                        <td>
                            <h5>Toplam Fiyat: $@totalPrice</h5>
                        </td>

                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    @Html.ActionLink("Return to Main Page", "Index", null, new { @class = "btn btn-dark btn-lg btn-block" })
</section>

