@model List<Brand>

<h5 class="table-header">Brands</h5>
<ul class="list-group">
    @foreach (var brand in Model)
    {
        <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/Home/Index/@brand.ID">@brand.BrandName</a>
            <span class="badge bg-warning rounded-pill">@brand.Products.Count()</span>
        </li>
    }

</ul>
