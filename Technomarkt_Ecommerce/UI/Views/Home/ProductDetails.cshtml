@model Product
@{
    ViewBag.Title = "ProductDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section id="product-page">
    <div class="container mt-5">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <img src="~/Content/img/@Model.ProductImagePath" style="width:35em; height:auto; margin-top: 30px;" />
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12">
                <h3>@Model.ProductName</h3>
                <h3>$@Model.UnitPrice</h3>
                <h5>Category: @Model.SubCategory.Category.CategoryName</h5>
                <p>@Model.Description</p>
                <div class="row mt-2">
                    @Html.ActionLink("Add to Cart", "AddToCart", "Home", new { id = Model.ID }, new { @class = "btn btn-dark" })
                </div>
            </div>
        </div>
    </div>
</section>

